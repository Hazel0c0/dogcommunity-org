<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mvc.chap05.repository.BoardMapper">

    <select id="findPetProfile" resultType="petprofile">
        SELECT
            pet_no, pet_name, pet_age, pet_kind
             , pet_gender,pet_photo,profile_date_time
        FROM tbl_pet
        ORDER BY profile_date_time DESC
    </select>
    <delete id="deletePetProfile">
        DELETE FROM tbl_pet
        WHERE pet_no = #{petNo}
    </delete>
</mapper>