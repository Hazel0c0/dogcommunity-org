<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="company.friendsdog.dogcommunity.repository.ReplyMapper">

    <!--인썰트-->
    <!--  댓글 등록-->
    <insert id="save">
        INSERT INTO tbl_reply
<!--        DB값이랑 같아야함-->
        (reply_no,comment,reply_date_time)

        VALUES
<!--        ENTITY 랑 같아야함-->
        (#{replyNo},#{comment},#{replyDateTime})
<!--mybatis 오류 xml sql 수정-->
    </insert>


    <!--    전체 댓글조회-->

    <select id="findAll" resultType="reply">
        SELECT
        A.comment,
        A.reply_no,
        A.reply_date_time,
        A.board_no,
        A.pet_no,
        A.pet_name,
        A.pet_photo,
        B.board_no
        FROM tbl_reply A
        JOIN tbl_board B
        on A.board_no = B.board_no
        WHERE A.board_no = #{bn}
<!--        댓글번호가 아니라 게시글 번호-->
        ORDER BY reply_no
<!--        LIMIT #{p.pageStart}, #{p.amount}-->

    </select>


    <!--    댓글 조회-->

    <select id="findOne" resultType="reply">
        SELECT
        a.board_no,pet_no,reply_no,
        comment,reply_date_time
        FROM tbl_reply
        WHERE reply_no = #{replyNo}
    </select>

    <!-- 댓글 삭제-->
    <delete id="remove">
        DELETE FROM tbl_reply
        WHERE reply_no = #{replyNo}

    </delete>
    <!-- 댓글 수정-->
    <update id="modify">
        UPDATE tbl_reply
        <!-- get{}-->
        SET comment =#{comment}
        WHERE reply_no=#{replyNo}
    </update>

    <select id="count" resultType="reply">
        SELECT COUNT(*)
        FROM tbl_reply
        WHERE board_no= #{boardNo}
    </select>

</mapper>