<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="company.friendsdog.dogcommunity.repository.PetMapper">

    <select id="findAll" resultType="petCard">
        SELECT
            pet_no, pet_name, pet_age, pet_kind
             , pet_gender,pet_photo,profile_date_time,hashTag
        FROM tbl_pet
        ORDER BY profile_date_time DESC
    </select>

